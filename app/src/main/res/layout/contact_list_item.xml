<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">
    <ImageView
        android:id="@+id/imageDocIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_face" />
    <TextView
        android:text="Contact Name"
        android:id="@+id/contact_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/imageDocIcon"
        android:layout_toRightOf="@+id/imageDocIcon"
        android:textColor="@color/list_item_text"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:text="email"
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_textview"
        android:layout_alignLeft="@+id/contact_textview"
        android:layout_alignStart="@+id/contact_textview"
        android:layout_alignRight="@+id/contact_textview"
        android:layout_alignEnd="@id/contact_textview"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"  />

    <TextView
        android:text=" "
        android:id="@+id/phone_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_textView"
        android:layout_alignLeft="@+id/email_textView"
        android:layout_alignStart="@+id/email_textView"
        android:layout_alignRight="@id/email_textView"
        android:layout_alignEnd="@id/email_textView"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="left" />
</RelativeLayout>